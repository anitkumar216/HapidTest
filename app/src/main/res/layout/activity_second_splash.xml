<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical"
    tools:context=".SecondSplashActivity">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="#FFFBF3"
        android:layout_height="0dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_app_icon"
                android:layout_gravity="center"
                android:layout_width="82dp"
                android:layout_height="82dp" />

            <ImageView
                android:layout_width="136dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_happid_name"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="0dp" >

        <TextView
            android:id="@+id/tv_header_text"
            style="@style/textViewInterHeaderStyle"
            android:text="Best Marketplace"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/tv_header_text"
            style="@style/textViewInterMediumParaStyle"
            android:text="@string/second_splash_long_text"
            android:lineHeight="24sp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:maxLines="5"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnGetStarted"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="Get Started"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="16sp"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </RelativeLayout>

</LinearLayout>